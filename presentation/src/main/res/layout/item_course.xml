<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardCourse"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/courses_surface_dark"
    android:backgroundTint="@color/courses_surface_dark"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Обложка -->
        <ImageView
            android:id="@+id/imageCover"
            android:layout_width="0dp"
            android:layout_height="114dp"
            android:scaleType="centerCrop"
            android:background="@color/courses_surface_dark"
            android:contentDescription="@string/course_cover_content_desc"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- “Стеклянные” бейджи: рейтинг + дата -->
        <LinearLayout
            android:id="@+id/layoutInfoChips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@id/imageCover"
            app:layout_constraintStart_toStartOf="@id/imageCover">

            <!-- Рейтинг -->
            <TextView
                android:id="@+id/textRating"
                style="@style/Text.Courses.LabelMedium"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:background="@drawable/bg_info_chip"
                android:gravity="center_vertical"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:drawableStart="@drawable/ic_star"
                android:drawablePadding="4dp"
                android:drawableTint="@color/courses_primary_green"
                android:text="@string/course_rating_placeholder" />

            <!-- Дата -->
            <TextView
                android:id="@+id/textPublishDate"
                style="@style/Text.Courses.LabelMedium"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_info_chip"
                android:gravity="center_vertical"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="@string/course_publish_date_placeholder" />
        </LinearLayout>

        <!-- Bookmark (кружок со значком) -->
        <FrameLayout
            android:id="@+id/layoutBookmark"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_bookmark_container"
            app:layout_constraintTop_toTopOf="@id/imageCover"
            app:layout_constraintEnd_toEndOf="@id/imageCover">

            <ImageView
                android:id="@+id/imageBookmark"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_favorite"
                android:contentDescription="@string/course_bookmark_content_desc"
                app:tint="@color/courses_white" />
        </FrameLayout>

        <!-- Нижний блок: заголовок, описание, цена, “Подробнее” -->
        <LinearLayout
            android:id="@+id/layoutBottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/imageCover"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Заголовок -->
            <TextView
                android:id="@+id/textTitle"
                style="@style/Text.Courses.TitleMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@string/course_title_placeholder" />

            <!-- Описание -->
            <TextView
                android:id="@+id/textDescription"
                style="@style/Text.Courses.BodySmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="@string/course_description_placeholder" />

            <!-- Цена + “Подробнее” -->
            <LinearLayout
                android:id="@+id/layoutPriceAndMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textPrice"
                    style="@style/Text.Courses.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/course_price_placeholder" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textMore"
                    style="@style/Text.Courses.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/course_more_button" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
